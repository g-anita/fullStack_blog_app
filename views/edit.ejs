<% include ./partials/header %>

<div class="blogForm">
  <form action="/blog/<%= blog._id %>?_method=PUT" method="POST">
    <div class="container">
      <div class="form-group">
        <label>Blog Title</label>
        <input class="form-control" type="text" name="blog[title]" value="<%= blog.title %>">
      </div>
      <div class="form-group">
        <label>Blog Content</label>
        <textarea class="form-control" rows="8" type="text" name="blog[content]"><%= blog.content %></textarea>
      </div>
      <div class="form-group">
        <label>Image</label>
        <input class="form-control" type="text" name="blog[image]" value="<%= blog.image %>">
      </div>
      <div class="form-group">
        <button class="btn btn-dark btn-lg btn-block">Edit Blog</button>
      </div>
    </div>
  </form>
</div>

<% include ./partials/footer %>
