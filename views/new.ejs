<% include ./partials/header %>

<div class="blogForm">
  <form action="/blog" method="POST">
    <div class="container">
      <div class="form-group">
        <label>Blog Title</label>
        <input class="form-control" name="blog[title]" type="text" placeholder="Title">
      </div>
      <div class="form-group">
        <label>Blog Content</label>
        <textarea class="form-control" rows="8" name="blog[content]" type="text" placeholder="Blog Content"></textarea>
      </div>
      <div class="form-group">
        <label>Image</label>
        <input class="form-control" name="blog[image]" type="text" placeholder="Image URL">
      </div>
      <div class="form-group">
        <button class="btn btn-dark btn-block">Post Blog</button>
      </div>
    </div>
  </form>
</div>

<% include ./partials/footer %>
